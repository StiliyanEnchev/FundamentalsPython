class Catalogue: 
  
  def __init__(self, product_name):
    self.product_name = product_name
    self.products_list = []
    
  def add_product(self, product_name: str):
    self.products_list.append(product_name)

  def get_by_letter(self, first_letter: str):
    return [product for product in self.products_list if product.startswith(first_letter)]

  def __repr__(self):
    return_string = f"Items in the {self.product_name} catalogue:\n"
    return_string += '\n'.join(sorted(self.products_list))
    return return_string

catalogue = Catalogue("Furniture")
catalogue.add_product("Sofa")
catalogue.add_product("Mirror")
catalogue.add_product("Desk")
catalogue.add_product("Chair")
catalogue.add_product("Carpet")
print(catalogue.get_by_letter("C"))
print(catalogue)
