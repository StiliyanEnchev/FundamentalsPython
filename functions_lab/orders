product = input()
quantity = int(input())

def total_price(product, quantity):
    if product == "coffee":
        price = quantity * 1.50
    elif product == "water":
        price = quantity * 1.00
    elif product == "coke":
        price = quantity * 1.40
    elif product == "snacks":
        price = quantity * 2.00
    return price
  
price = total_price(product, quantity)

print(f'{price:.2f}')
